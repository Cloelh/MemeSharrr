{% extends 'layout.html.twig' %}
{% block title %}Home{% endblock %}
{% block body %}
    <div class="content">

        <div class="bann w-100 text-center py-5">
            <h1 class="green pulpo">MemeSharrr</h1>
            <p class="green">Une petite application permettant aux utilisateurs de partager leurs meilleurs meme.</p>
        </div>

        <div class="d-flex flex-wrap">
            {% for meme in memes %}
                <div class="card m-5 align-items-center">
                    <div class="card-body d-flex flex-column align-items-center">
                        <a href="list-memes/view?id={{ meme.id }}" class="meme-link d-flex flex-column align-items-center justify-content-center">
                            <div class="thumbnail" style="background-image: url('{{ meme.img }}')"></div>
                            <div class="pulpo author pt-1">poster par {{ meme.author }}</div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

