{% extends 'layout.html.twig' %}
{% block title %}Liste des memes{% endblock %}
{% block body %}
    <div class="content">

        <div class="bann w-100 text-center py-5">
            <h1 class="green pulpo pt-">Liste des les memes</h1>
            <i><a class="green" href="/MemeSharrr/share">=> n'hesites pas Ã  nous partager les tiens !!</a></i>
        </div>

        <div class="d-flex flex-wrap">
            {% for meme in memes %}
                <div class="card m-5">
                    <div class="card-body d-flex flex-column align-items-center">
                        <a href="list-memes/view?id={{ meme.id }}" class="meme-link d-flex flex-column align-items-center justify-content-center">
                            <div class="thumbnail" style="background-image: url('{{ meme.img }}')"></div>
                            <div class="pulpo author pt-1">poster par {{ meme.author }}</div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

